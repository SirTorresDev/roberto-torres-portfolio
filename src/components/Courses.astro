---

<section id="courses" class="courses">
  <div class="container">
    <div class="section-title">
      <h2>Professional Certifications</h2>
      <div class="line"></div>
      <p>Accredited courses and industry-recognized certifications</p>
    </div>
    
    <div class="courses-grid">
      {courses.map((course, index) => (
        <article class="course-card" style={`animation-delay: ${index * 0.1}s`}>
          {course.verified && (
            <div class="verified-badge">
              <i class="fas fa-shield-alt"></i>
              Verified
            </div>
          )}
          
          <div class="course-icon">
            {course.logo ? (
              <div class="logo-wrapper">
                <img 
                  src={course.logo} 
                  alt={`${course.platform} logo`}
                  class="certification-logo"
                  loading="lazy"
                  onerror="this.style.display='none'"
                />
              </div>
            ) : (
              <span class="icon-circle" style={`border-color: ${course.color}`}>
                <i class={course.icon} style={`color: ${course.color}`}></i>
              </span>
            )}
          </div>
          
          <div class="course-content">
            <span class="level-badge">{course.level}</span>
            
            <h3 class="course-title">{course.title}</h3>
            
            <div class="course-meta">
              <span class="platform">
                <i class="fas fa-building"></i>
                {course.platform}
              </span>
              <span class="separator">•</span>
              <span class="year">
                <i class="far fa-calendar-alt"></i>
                {course.year}
              </span>
            </div>
            
            <p class="course-description">{course.description}</p>
            
            {course.credlyId && (
              <div class="credential-actions">
                <a 
                  href={`https://www.credly.com/badges/${course.credlyId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-credential"
                >
                  <i class="fas fa-award"></i>
                  View Credential
                  <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .courses {
    background: #f8f9fa;
    padding: 90px 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  
  /* Section Title */
  .section-title {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.8rem;
  }
  
  .line {
    width: 60px;
    height: 3px;
    background: #0078ff;
    margin: 0 auto 1.5rem;
  }
  
  .section-title p {
    color: #6c757d;
    font-size: 1.1rem;
  }
  
  /* Grid */
  .courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  
  /* Course Card */
  .course-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out backwards;
    border: 1px solid #e9ecef;
    position: relative;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }
  
  /* Verified Badge */
  .verified-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: #28a745;
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .verified-badge i {
    font-size: 0.85rem;
  }
  
  /* Icon & Logo */
  .course-icon {
    margin-bottom: 1.5rem;
  }
  
  .logo-wrapper {
    width: 140px;
    height: 100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 1rem;
    transition: all 0.3s ease;
  }
  
  .course-card:hover .logo-wrapper {
    border-color: #0078ff;
    box-shadow: 0 4px 12px rgba(0, 120, 255, 0.15);
  }
  
  .certification-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  
  .icon-circle {
    width: 100px;
    height: 100px;
    margin: 0 auto;
    border-radius: 50%;
    display: grid;
    place-items: center;
    font-size: 2.5rem;
    transition: all 0.3s ease;
    background: white;
    border: 3px solid;
  }
  
  .course-card:hover .icon-circle {
    transform: scale(1.05);
  }
  
  /* Content */
  .course-content {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  
  .level-badge {
    display: inline-block;
    background: #e9ecef;
    color: #495057;
    padding: 0.4rem 1rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    align-self: center;
  }
  
  .course-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    line-height: 1.3;
    margin-bottom: 0.5rem;
  }
  
  .course-meta {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .platform,
  .year {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }
  
  .platform {
    font-weight: 600;
    color: #495057;
  }
  
  .platform i,
  .year i {
    font-size: 0.85rem;
    opacity: 0.7;
  }
  
  .separator {
    color: #dee2e6;
  }
  
  .course-description {
    color: #6c757d;
    font-size: 0.95rem;
    line-height: 1.6;
    flex: 1;
  }
  
  /* Credential Actions */
  .credential-actions {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e9ecef;
  }
  
  .btn-credential {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: #0078ff;
    color: white;
    padding: 0.7rem 1.5rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .btn-credential:hover {
    background: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 120, 255, 0.3);
  }
  
  .btn-credential i {
    font-size: 0.85rem;
  }
  
  .btn-credential i:last-child {
    margin-left: auto;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .courses {
      padding: 60px 0;
    }
    
    .section-title h2 {
      font-size: 2rem;
    }
    
    .courses-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .course-card {
      padding: 2rem 1.5rem;
    }
    
    .logo-wrapper {
      width: 120px;
      height: 90px;
    }
    
    .icon-circle {
      width: 80px;
      height: 80px;
      font-size: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .section-title h2 {
      font-size: 1.8rem;
    }
    
    .course-title {
      font-size: 1.2rem;
    }
    
    .logo-wrapper {
      width: 110px;
      height: 80px;
    }
  }
</style>